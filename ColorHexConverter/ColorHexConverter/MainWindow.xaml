<Window x:Class="ColorHexConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:ColorHexConverter"
        mc:Ignorable="d"
        Title="Color Hex Converter" Height="350" Width="300"
        ResizeMode="NoResize"
        UseLayoutRounding="True">
    <DockPanel>
        <xctk:ColorPicker DockPanel.Dock="Top" AvailableColorsSortingMode="HueSaturationBrightness" SelectedColor="{Binding SelectedColor, ElementName=colorCanvas}" />
        <xctk:ColorCanvas x:Name="colorCanvas" SelectedColor="Black" />
    </DockPanel>
</Window>
